<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/month_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textAppearance="@style/TextAppearance.Toolbar"
        android:textColor="@color/deep_orange" />

    <TextView
        android:id="@+id/day_text"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/ic_restart"
        android:gravity="center"
        android:text="@string/_00"
        android:textAlignment="center"
        android:textAppearance="@android:style/TextAppearance.Medium" />

    <ToggleButton
        android:id="@+id/toggle_calender"
        android:layout_width="@dimen/toggle_button_width"
        android:layout_height="@dimen/toggle_button_height"
        android:layout_gravity="center_vertical"
        android:background="@drawable/check_complete_calendar"
        android:backgroundTint="@color/deep_orange"
        android:contextClickable="false"
        android:clickable="false"
        android:textOff=""
        android:textOn="" />

</LinearLayout>